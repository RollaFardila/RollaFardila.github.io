        <!-- Results -->
        <div id="resultsContainer" class="hidden bg-white rounded-xl card-shadow p-8">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-red-800 mb-4">🎉 Hasil Kuis</h2>
                <div class="bg-red-50 rounded-lg p-6 mb-6">
                    <p class="text-lg text-red-700 mb-2"><strong>Nama:</strong> <span id="finalName"></span></p>
                    <p class="text-lg text-red-700 mb-2"><strong>Kelas:</strong> <span id="finalClass"></span></p>
                    <p class="text-2xl font-bold text-red-800"><strong>Nilai:</strong> <span id="finalScore"></span>/100</p>
                </div>
            </div>

            <div class="flex gap-4 mb-6">
                <button id="showDiscussionBtn" onclick="toggleDiscussion()" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                    📚 Lihat Pembahasan
                </button>
                <button onclick="restartQuiz()" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                    🔄 Ulangi Kuis
                </button>
            </div>

            <div id="reviewContainer" class="hidden">
                <h3 class="text-2xl font-bold text-red-800 mb-6">📚 Pembahasan Soal</h3>
                <div id="reviewQuestions" class="space-y-6">
                    <!-- Review will be loaded here -->
                </div>
